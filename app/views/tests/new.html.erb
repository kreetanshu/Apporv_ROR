
<h1> This is New post</h1>

<%= form_for @post do |f| %>
<div class="row">
 <div class="col-md-6 col-md-offset-3">
	<p> 
		<%= f.label :title %>
		<%= f.text_field :title , class: 'form-control' %></br>
	</p>
		<p> 
		<%= f.label :body %>
		<%= f.text_area :body , class: 'form-control' %></br>

		<%= f.label :category_id %> 
      <%= f.select :category_id, Category.all.collect {|x| [x.name, x.id]}, {:include_blank => "Select One" } , class: 'form-control'%>
	</p>
	
    <p>
    	<%= f.submit "Add Post" , class: "btn btn-primary" %>
    </p>
</div>
</div>
    <% end %>
