<h1>Tests#index</h1>
<table class="table table-hover">
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
   
      <th>Category</th>
      <th>Created At</th>
   
      <th>Edit</th>
      <th>Delete</th>
    </tr>
  </thead>
  <tbody>
<% @post.each do |post| %>
<tr>

<td><%= link_to post.title, {:controller => 'tests' , :action => 'show', :id => post.id} %></td>
<td><%= post.body %></td>
<td><%= post.category.name %></td>
<td><small><%= post.created_at.strftime("%b %d. %Y") %></small></br></td>
<td><%= link_to "Edit", {:controller => 'tests' , :action => 'edit', :id => post.id} %></td>

<td><%= link_to 'Destroy', post, data:{confirm: 'Are you sure to delete'} , method: :delete %></td>
</tr>
<% end %>
  </tbody>
    </table>
<p><%= link_to "Add New" , new_test_path %></p>
</p>
<p><%= link_to "Category Page" , categories_path %></p>
</p>

